<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="?attr/actionBarSize"
        android:paddingEnd="16dp"
        tools:context=".IdentificationFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:text="@string/status"
            android:textColor="#454141"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:text="@string/user_identified"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/is_user_identified"
                style="@style/RoundCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:text="@string/unverified_user"
            android:textColor="#454141"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/user_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_user_id"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/unverified_user_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#D3D3D3"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="@string/identify_the_unverified_user"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:text="@string/verified_user"
            android:textColor="#454141"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/verified_user_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/enter_user_id"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/session_token_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_session_token"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/verified_user_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#D3D3D3"
            android:gravity="center_vertical|start"
            android:text="@string/identify_verified_user"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:text="@string/update_user"
            android:textColor="#454141"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/update_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/new_user_email"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/update_user_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#D3D3D3"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="@string/update_the_user"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            android:text="@string/logout"
            android:textColor="#454141"
            android:textSize="12sp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#D3D3D3"
            android:gravity="center_vertical|start"
            android:text="@string/logout2"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>